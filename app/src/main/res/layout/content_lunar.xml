<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LunarActivity"
    tools:showIn="@layout/activity_lunar">

    <com.haibin.calendarview.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:calendar_height="60dp"
        app:calendar_padding="10dp"
        app:current_day_lunar_text_color="@color/primary_blue"
        app:current_day_text_color="@color/primary_blue"
        app:current_month_lunar_text_color="#CFCFCF"
        app:current_month_text_color="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:max_year="2020"
        app:min_year="2004"
        app:month_view="cc.xiaojiang.liangbo.view.CustomMonthView"
        app:month_view_show_mode="mode_fix"
        app:other_month_lunar_text_color="#e1e1e1"
        app:other_month_text_color="#e1e1e1"
        app:selected_lunar_text_color="#fff"
        app:selected_text_color="#fff"
        app:selected_theme_color="@color/primary_blue"
        app:week_background="@color/transparent"
        app:week_text_color="#e1e1e1"
        app:week_text_size="14sp"
        app:week_view="cc.xiaojiang.liangbo.view.CustomWeekView"
        app:year_view_day_text_color="#333333"
        app:year_view_day_text_size="9sp"
        app:year_view_month_text_color="@color/black"
        app:year_view_month_text_size="20sp"
        app:year_view_scheme_color="#f17706">

    </com.haibin.calendarview.CalendarView>

    <View
        android:id="@+id/view3"
        style="@style/horizontalBlockView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarView" />

    <TextView
        android:id="@+id/tv_calendar_day"
        style="@style/commonText"
        android:layout_marginEnd="24dp"
        android:includeFontPadding="false"
        android:textColor="@color/primary_blue"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_lunar_time"
        app:layout_constraintVertical_bias="0.0"
        tools:text="15" />

    <TextView
        android:id="@+id/tv_solar_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_lunar_month_day"
        app:layout_constraintEnd_toEndOf="@+id/tv_calendar_day"
        app:layout_constraintTop_toTopOf="@+id/tv_lunar_month_day"
        app:layout_constraintVertical_bias="1.0"
        tools:text="TextView" />

    <TextView
        android:id="@+id/tv_lunar_time"
        style="@style/common_14_black_text"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_lunar_year"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="TextView" />

    <TextView
        android:id="@+id/tv_lunar_year"
        style="@style/common_14_black_text"
        app:layout_constraintBottom_toTopOf="@+id/tv_lunar_month_day"
        app:layout_constraintStart_toStartOf="@+id/tv_lunar_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_lunar_time"
        tools:text="TextView" />

    <TextView
        android:id="@+id/tv_lunar_month_day"
        style="@style/common_14_black_text"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_lunar_year"
        app:layout_constraintTop_toBottomOf="@+id/tv_lunar_year"
        tools:text="TextView" />

    <android.support.constraint.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tv_solar_terms,tv_lunar_year,tv_lunar_month_day,
tv_calendar_day,tv_lunar_time" />
</android.support.constraint.ConstraintLayout>