<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cc.xiaojiang.headspring.activity.LoginActivity"
    tools:showIn="@layout/activity_login">

    <TextView
        android:id="@+id/rb_login_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="登陆"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/test_24dp"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:text="15058436970"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/et_verify_code"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/test_24dp"
            android:hint="请输入验证码"
            android:inputType="number"
            android:text="123"
            android:textSize="14sp" />

        <cc.xiaojiang.headspring.view.CommonTextView
            android:id="@+id/ctv_get_verify_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:paddingBottom="10dp"
            android:paddingEnd="6dp"
            android:paddingStart="6dp"
            android:paddingTop="10dp"
            android:text="获取验证码"
            android:textSize="14sp"
            app:border_color_normal="@color/primary_blue"
            app:border_color_unable="@color/personal_picker_cancel"
            app:text_color_normal="@color/primary_blue"
            app:text_color_unable="@color/personal_picker_cancel" />
    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="注册默认您同意用户协议" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_button"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>