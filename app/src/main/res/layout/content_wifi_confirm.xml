<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cc.xiaojiang.headspring.activity.WifiConfirmActivity"
    tools:showIn="@layout/activity_wifi_confirm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/test_24dp" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edTxt_wifi_confirm_ssid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="当前wifi" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edTxt_wifi_confirm_password"
            android:layout_width="match_parent"
            android:text="test062516"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_wifi_conform_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_button"
        android:text="下一步"
        android:textColor="@color/white" />

</FrameLayout>